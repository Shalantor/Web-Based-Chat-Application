<!doctype html>
<html>

<head>
  <title> Temporary login page to verify login functionality </title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>

<body>

  <div class="container">

    <div class="page-header text-center">
      <h1>Temporary login page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <div class="col-sm-6">
        <div class="well">

          <!-- Local user login -->
          <h3>Local User Info</h3>

          <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>username</strong>: <%= user.local.username %><br>
            <strong>email</strong>: <%= user.local.email %><br>
            <strong>password</strong>: <%= user.local.password %><br>
          </p>

          <!-- Facebook login -->
          <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

            <p>
              <strong>id</strong>: <%= user.facebook.id %><br>
              <strong>token</strong>: <%= user.facebook.token %><br>
              <strong>email</strong>: <%= user.facebook.email %><br>
              <strong>name</strong>: <%= user.facebook.name %><br>
            </p>

            <!-- Twitter login -->
            <h3 class="text-primary"><span class="fa fa-twitter"></span> Twitter</h3>

              <p>
                <strong>id</strong>: <%= user.twitter.id %><br>
                <strong>token</strong>: <%= user.twitter.token %><br>
                <strong>email</strong>: <%= user.twitter.username %><br>
                <strong>name</strong>: <%= user.twitter.displayName %><br>
              </p>

          <!-- Google login -->
          <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>

              <p>
                  <strong>id</strong>: <%= user.google.id %><br>
                  <strong>token</strong>: <%= user.google.token %><br>
                  <strong>email</strong>: <%= user.google.email %><br>
                  <strong>name</strong>: <%= user.google.name %>
              </p>

        </div>
      </div>

    </div>

  </div>

</body>

</html>
